<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/header') %>
    <title>Meus Anúncios - CardHub</title>
    <style>
        .listings-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 20px;
            margin-top: 2rem;
        }
        .listing-card {
            background-color: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: 0 4px 8px rgba(0,0,0,0.05);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .listing-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        }
        .listing-card__image {
            width: 100%;
            aspect-ratio: 63/88; /* Proporção de carta de TCG */
            object-fit: cover;
        }
        .listing-card__info {
            padding: 15px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .listing-card__name {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            flex-grow: 1; /* Empurra o resto para baixo */
        }
        .listing-card__details {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin-bottom: 15px;
        }
        .listing-card__details p {
            margin: 4px 0;
            display: flex;
            justify-content: space-between;
        }
        .listing-card__price {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--primary);
            margin-bottom: 10px;
        }
        .listing-card__actions {
            display: flex;
            gap: 10px;
            padding: 15px;
            border-top: 1px solid var(--border);
        }
        .listing-card__actions .btn,
        .listing-card__actions button {
            flex-grow: 1;
            margin: 0;
        }
        .listing-card__actions form {
            display: contents; /* Faz o form não ocupar espaço */
        }
    </style>
</head>
<body>
    <div class="container">
        <%- include('../partials/navbar') %>
    </div>
    <main class="container">
        <h1>Meus Anúncios</h1>

        <% if (listings && listings.length > 0) { %>
            <div class="listings-grid">
                <% listings.forEach(listing => { %>
                    <div class="listing-card">
                        <% if (listing.card && listing.card.image_url) { %>
                            <img src="<%= listing.card.image_url %>" alt="<%= listing.card.name %>" class="listing-card__image">
                        <% } %>
                        <div class="listing-card__info">
                            <h3 class="listing-card__name"><%= listing.card ? listing.card.name : 'Carta não encontrada' %></h3>
                            <div class="listing-card__details">
                                <p><span>Condição:</span> <strong><%= listing.condition %></strong></p>
                                <p><span>Idioma:</span> <strong><%= listing.language %></strong></p>
                                <p><span>Quantidade:</span> <strong><%= listing.quantity %></strong></p>
                            </div>
                            <div class="listing-card__price">
                                <% 
                                    let priceStr = 'R$ ' + Number(listing.price || 0).toFixed(2).replace('.', ',');
                                    if (priceStr.endsWith(',00')) {
                                        priceStr = priceStr.slice(0, -3);
                                    }
                                %>
                                <%= priceStr %>
                            </div>
                        </div>
                        <div class="listing-card__actions">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-secondary">Editar</a>
                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>Você ainda não tem nenhum anúncio.</p>
            <a href="/vender" class="btn btn-primary" style="margin-top: 1rem;">Criar meu primeiro anúncio</a>
        <% } %>
    </main>
    <div class="container">
        <%- include('../partials/footer') %>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>