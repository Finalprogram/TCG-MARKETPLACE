<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/header') %>
    <title>Login - CardHub</title>
</head>
<body class="auth-body">
    <div class="container">
    <%- include('../partials/navbar') %>
    </div>
    <main class="container">
        <div class="glass-panel">
            <h1>Login</h1>
            <p class="subtitle">Acesse sua conta para começar a negociar.</p>

            <div class="social-login">
                <a href="/auth/google" class="btn-social">G Entrar com Google</a>
            </div>

            <div class="divider">Ou</div>

            <form action="/auth/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Digite seu email" required>
                </div>
                <div class="form-group">
                    <label for="password">Senha</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Digite sua senha" required>
                </div>

                <button type="submit" class="btn-primary btn-submit-full">Entrar</button>
            </form>
            
            <p style="text-align: center; margin-top: 1rem;">
                Não tem uma conta? <a href="/auth/register">Cadastre-se</a>
            </p>
        </div>
    </main>
    <script src="/js/main.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');

        if (message === 'registration_success') {
            if (window.showToast) {
                window.showToast('Usuário registrado com sucesso! Faça login para continuar.', 'success');
            } else {
                alert('Usuário registrado com sucesso! Faça login para continuar.');
            }
        }
    });
    </script>
</body>
</html>