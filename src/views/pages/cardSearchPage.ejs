<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/header') %>
    <title>Explorar Cartas de Magic</title>
</head>
<body>
   

    <main class="container">
         <%- include('../partials/navbar') %>
        <a href="/lista" id="floating-list-button">
            <span class="list-icon">üìù</span>
            <span class="list-item-count hidden">0</span>
        </a>
        
        <h1>Explorar Cartas de Magic</h1>

        <div class="search-container">
            <aside class="filters">
    <h3>Filtros</h3>
    <form action="/cards" method="GET">
        
        <% if (filterGroups && filterGroups.length > 0) { %>
            <% filterGroups.forEach(group => { %>
                <div class="filter-group">
                    <h4><%= group.name %></h4>
                    <% group.options.forEach(option => { %>
                        <% 
                            const value = typeof option === 'object' ? option.value : option;
                            const label = typeof option === 'object' ? option.label : option;
                        %>
                        <label>
                            <input type="radio" name="<%= group.key %>" value="<%= value %>">
                            <%= label %>
                        </label>
                    <% }) %>
                </div>
            <% }) %>
        <% } %>

        <button type="submit" class="btn-primary">Aplicar Filtros</button>
    </form>
</aside>
            
            <section class="results">
                <nav class="format-filters">
                    <%
                      const formats = ['standard', 'pioneer', 'modern', 'commander', 'legacy', 'pauper'];
                      const currentFormat = filters.format || 'standard';
                    %>
                    <% formats.forEach(format => { %>
                        <a href="?format=<%= format %>" class="<%= currentFormat === format ? 'active' : '' %>">
                            <%= format.charAt(0).toUpperCase() + format.slice(1) %>
                        </a>
                    <% }) %>
                </nav>

                <div class="cards-carousel">
                    <% if (cards && cards.length > 0) { %>
                        <% cards.forEach(card => { %>
                            <div class="card-item">
                                <div class="card-image-container">
                                    <img src="<%= card.image_url %>" alt="<%= card.name %>">
                                </div>
                                <h4><%= card.name %></h4>
                                <p>
                                    Pre√ßo M√©dio: R$ <%= card.averagePrice ? card.averagePrice.toFixed(2) : 'N/A' %>
                                    <% if (card.price_trend === 'up') { %>
                                        <span style="color: green;">‚ñ≤</span>
                                    <% } else if (card.price_trend === 'down') { %>
                                        <span style="color: red;">‚ñº</span>
                                    <% } %>
                                </p>
                                <div class="add-to-list-controls">
                                    <div class="quantity-selector">
                                        <button class="quantity-btn minus" type="button">-</button>
                                        <input type="number" class="quantity-input" value="1" min="1">
                                        <button class="quantity-btn plus" type="button">+</button>
                                    </div>
                                    <button class="add-to-list-btn" data-cardid="<%= card._id %>">
                                        + Lista
                                    </button>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p>Nenhuma carta encontrada com esses filtros.</p>
                    <% } %>
                </div> <% if (totalCards > 0) { %>
                    <% 
                      const params = new URLSearchParams(filters);
                      params.delete('p');
                      const filterQueryString = params.toString();
                    %>
                    <div class="pagination" style="display: flex; justify-content: space-between; margin-top: 2rem;">
                        <% if (currentPage > 1) { %>
                            <a href="/cards/magic?p=<%= currentPage - 1 %>&<%= filterQueryString %>" class="btn-secondary">
                                &larr; P√°gina Anterior
                            </a>
                        <% } else { %>
                            <div></div>
                        <% } %>
                        <% if (hasMore) { %>
                            <a href="/cards/magic?p=<%= currentPage + 1 %>&<%= filterQueryString %>" class="btn-primary">
                                Pr√≥xima P√°gina &rarr;
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </section>
        </div>
    </main>
    <div class="container"
    <%- include('../partials/footer') %>
</div>
</body>
</html>