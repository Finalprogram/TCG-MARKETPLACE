<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/header') %>
    <title>Crie sua Conta - CardHub</title>
</head>
<body class="auth-body">
    <div class="container">
    <%- include('../partials/navbar') %>
</div>
    <main class="container">
        <div class="glass-panel">
            <h1>Crie sua Conta</h1>
            <p class="subtitle">Comece a negociar suas cartas hoje mesmo!</p>

            <div class="social-login">
                <a href="/auth/google" class="btn-social">G Google</a>
            </div>

            <div class="divider">Ou</div>

                        <form action="/register" method="POST">
                            <% if (typeof errors !== 'undefined' && errors.general) { %>
                                <div class="alert alert-danger">
                                    <%= errors.general %>
                                </div>
                            <% } %>

                            <div class="form-group">
                                <label for="username">Nome de Usuário</label>
                                <input type="text" name="username" id="username" class="form-control <%= typeof errors !== 'undefined' && errors.username ? 'is-invalid' : '' %>" placeholder="Digite seu nome de usuário" value="<%= typeof oldInput !== 'undefined' ? oldInput.username : '' %>" required>
                                <% if (typeof errors !== 'undefined' && errors.username) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.username %>
                                    </div>
                                <% } %>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" name="email" id="email" class="form-control <%= typeof errors !== 'undefined' && errors.email ? 'is-invalid' : '' %>" placeholder="Digite seu email" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" required>
                                <% if (typeof errors !== 'undefined' && errors.email) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.email %>
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="form-group">
                                <label for="password">Senha</label>
                                <input type="password" name="password" id="password" class="form-control <%= typeof errors !== 'undefined' && errors.password ? 'is-invalid' : '' %>" placeholder="Crie uma senha" required>
                                <% if (typeof errors !== 'undefined' && errors.password) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.password %>
                                    </div>
                                <% } %>
                            </div>

                            <div class="form-group">
                                <label for="confirmPassword">Confirmar Senha</label>
                                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control <%= typeof errors !== 'undefined' && errors.confirmPassword ? 'is-invalid' : '' %>" placeholder="Confirme sua senha" required>
                                <% if (typeof errors !== 'undefined' && errors.confirmPassword) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.confirmPassword %>
                                    </div>
                                <% } %>
                            </div>
            
                            <button type="submit" class="btn-primary btn-submit-full">Cadastrar</button>

                        </form>
        </div>
    </main>

</body>
</html>